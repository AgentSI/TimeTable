<UserControl x:Class="Timetable.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timetable"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#F8F8F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Image Source="Images/timetable.jpg" 
                   Width="400" 
                   Height="300" 
                   Stretch="UniformToFill"/>
        </StackPanel>

        <StackPanel Grid.Column="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Margin="50,0,0,0">
            <TextBlock Text="Time-Table Generator" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#3F51B5" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Let our Artificial Intelligence schedule your classes. Add your university class details and generate Time Table."
                       FontSize="16" 
                       TextWrapping="Wrap" 
                       Foreground="#555555" 
                       Margin="0,0,0,30"/>
        </StackPanel>
    </Grid>
</UserControl>
